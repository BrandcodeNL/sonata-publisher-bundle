{# BrandcodeNL/SonataPublisherBundle/Resources/views/CRUD/list__action_publish.html.twig #}

<a href="{{ admin.generateObjectUrl('publish', object) }}" class="btn btn-sm btn-default delete_link" title="Publish">
    <i class="fa fa-cloud-upload" aria-hidden="true"></i>
    {{'publish' | trans }} &nbsp;
    {% set count = object | isPublished %}
    {% if count > 0 %}
        <small class="label pull-right bg-green">{{count}}</small>
    {%else%}
    <small class="label pull-right">&nbsp;</small>
    {% endif %}
</a>